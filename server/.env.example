# Server Port
PORT=5002

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/wood_system

# JWT Secret (PRODUCTION UCHUN STRONG SECRET ISHLATING!)
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Node Environment
NODE_ENV=development

# Client URL (CORS uchun)
CLIENT_URL=http://localhost:3000

# Allowed Origins (CORS uchun - vergul bilan ajratilgan)
# Development: localhost va local IP'lar
# Production: real domain'lar
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.1.7:3000,http://10.253.83.31:3000

# Backup Directory
BACKUP_DIR=./backups

